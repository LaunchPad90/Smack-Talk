<%- include ../partials/header %> 

      <div class="cards">
        <div class="card">
          <% if (recipe.image) { %>
            <img class="card-image" name="image" src="<%= recipe.image %>" alt="">
          <% } %>
          <div class="content">
            <div class="card-title"><%= recipe.title %><br></div>
            <%= recipe.course %><br>
            <label for="servings">Servings:</label>
            <%= recipe.servings %><br>
          <label>Prep Time(mins):</label><br>
            <%= recipe.prepTime %><br>
          <label>Cook Time(mins):</label><br>
            <%= recipe.cookTime %><br>
          </div>
        </div>
        <div class="card">
          <div>
            <label>Directions:</label><br>
              <div class="content"><%= recipe.directions %></div>
          </div>
        </div>
        <div class="card">
          <label>Ingredients:</label>
          <div class="content"><%= recipe.ingredients %></div>
        </div>
      </div>

  <div class="image-div">
    <% if (user._id.equals(recipe.user)) { %>
    <form action="/recipes/<%= recipe.id %>/edit">
      <button class="showbtn">Edit</button>
    </form>
    <form action="/recipes/<%= recipe.id %>?_method=DELETE" method="POST">
      <button class="showbtn">Delete</button>
    </form>
  <% } %> 
  </div>

    <form action="/recipes/<%= recipe.id %>/comments" method="POST"> 
      <div class="comments-container">
        <textarea name="content" cols="40" rows="5" placeholder="Tell me what you thought!"></textarea>
        <div class="comment-submit">
          <button type="submit">Submit</button>
        </div>
      </div>
      
    </form>
    
    <% recipe.comments.forEach(function(comment) { %>
      <div class="comments-div"><%= comment.content %></div>
    <% }) %>

<%- include ../partials/footer %> 