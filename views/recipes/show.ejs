<%- include ../partials/header %> 

      <div class="cards">
        <div class="card">
          <% if (recipe.image) { %>
            <img class="card-image" src="<%= recipe.image %>" alt="">
          <% } %>
          <div class="content">             
            <label>Course:</label><br>
              <%= recipe.course %><br>
            <label>Title:</label><br>
              <%= recipe.title %><br>
            <label>Servings:</label><br>
              <%= recipe.servings %><br>
            <label>Prep Time(mins):</label><br>
              <%= recipe.prepTime %><br>
            <label>Cook Time(mins):</label><br>
              <%= recipe.cookTime %><br>
          </div>
        </div>
        <div class="card">
          <div>
            <label>Directions:</label><br>
              <%= recipe.directions %>
          </div>
        </div>
        <div class="card">
          <label>Ingredients:</label>
          <%= recipe.ingredients %>
        </div>
      </div>

  <div class="image-div">
    <form action="/recipes/<%= recipe.id %>/edit">
      <button class="showbtn">Edit</button>
    </form>
    <form action="/recipes/<%= recipe.id %>?_method=DELETE" method="POST">
      <button class="showbtn">Delete</button>
    </form>
  </div>

    <form action="/recipes/<%= recipe.id %>/comments" method="POST"> 
      <div class="comments-container">
        <textarea name="content" cols="40" rows="5" placeholder="Tell me what you thought!"></textarea>
        <div class="comment-submit">
          <button type="submit">Submit</button>
        </div>
      </div>
      
    </form>
    
    <% recipe.comments.forEach(function(comment) { %>
      <div class="comments-div"><%= comment.content %></div>
    <% }) %>

<%- include ../partials/footer %> 