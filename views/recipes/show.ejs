<%- include ../partials/header %> 
<img id="show-img" src="<%= recipe.image %>" alt="">
<section id="recipe-container">
    <div><%= recipe.course %></div>
    <div><%= recipe.servings %> servings</div>
    <div>Prep Time: </div>
    <div><%= recipe.prepTime %> minutes</div>
    <div>Cook Time: </div>
    <div><%= recipe.cookTime %> minutes</div>
    <div>Ingredients: </div>
    <div><%= recipe.ingredients %></div>
    <div>Directions: </div>
    <div><%= recipe.directions %></div>
  </section>
  <form action="/recipes/:id/edit">
    <button class="showbtn">Edit</button>
  </form>
  <form action="/recipes/<%= recipe.id %>">
    <button class="showbtn">Delete</button>
  </form>

<%- include ../partials/footer %> 